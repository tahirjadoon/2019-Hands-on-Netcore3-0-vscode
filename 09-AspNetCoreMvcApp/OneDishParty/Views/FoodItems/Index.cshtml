@model IEnumerable<OneDishParty.Models.FoodItem>

@{
    ViewData["Title"] = "Our Food Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food Items</h2>

<p>
    <a asp-action="Create">Add a food item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.IsVeg)</th>
            <th>@Html.DisplayNameFor(model => model.IsGlutenFree)</th>
            <th>@Html.DisplayNameFor(model => model.Person)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.IsVeg)</td>
                <td>@Html.DisplayFor(modelItem => item.IsGlutenFree)</td>
                <td>@Html.DisplayFor(modelItem => item.Person)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>