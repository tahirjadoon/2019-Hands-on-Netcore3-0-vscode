@model OneDishParty.Models.FoodItem

@{
    ViewData["Title"] = "Add the Food Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create FoodItem</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person" class="control-label"></label>
                <input asp-for="Person" class="form-control" />
                <span asp-validation-for="Person" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label><input asp-for="IsVeg" /> @Html.DisplayNameFor(model => model.IsVeg)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label><input asp-for="IsGlutenFree" /> @Html.DisplayNameFor(model => model.IsGlutenFree)</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}